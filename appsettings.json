{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=MiniECommerceDb;Trusted_Connection=True;TrustServerCertificate=True"
  },

  "Jwt": {
    "Issuer": "MiniECommerce.Api",
    "Audience": "MiniECommerce.Client",
    "SecretKey": "SUPER_SECRET_KEY_CAMBIAR_EN_PRODUCCION",
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 7
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}
